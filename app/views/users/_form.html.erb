<div class="row">
  <%= form_with(model: @user, local: true, class: 'col-md-4 offset-md-4') do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control' %>
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: 'form-control' %>
    <%= f.submit yield(:submit_button_text), class: 'btn btn-block btn-primary mt-3' %>
    <%= link_to '戻る', logged_in? ? user_path : login_path, class: 'btn btn-block btn-secondary' %>
  <% end %>
</div>