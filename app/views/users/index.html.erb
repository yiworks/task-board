<div class="container">
  <header>
    <%= render 'shared/flash_message' %>
  </header>

  <div id="content">
    <h2>ユーザー一覧</h2>
    <table class="table table-hover">
      <thead>
      <tr>
        <th scope="col">ユーザー名</th>
        <th scope="col">メールアドレス</th>
      </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
        <tr class="users">
          <td class="align-middle"><%= link_to user.name, user %></td>
          <td class="align-middle"><%= user.email %></td>
          <td class="align-middle">
            <%= link_to '編集', edit_user_path(user), class: 'btn btn-primary' %>
            <%= link_to '削除', user, method: :delete, data:  { confirm: '削除してよろしいですか？' }, class: 'btn btn-warning' %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <%= paginate @users %>
  </div>
</div>